<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <link href="./css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="grid grid-cols-6 ">
       <div class="col-start-3 col-span-2">
        <%- include('header.ejs') %>
        <form>
            <div class="flex gap-2 py-4">
              <div class="flex-auto">
                <input type="text" placeholder="whats next ?" class="border border-gray-300 text-grey-900 w-full p-2 text-sm rounded "/>
              </div>
              <div class="flex-auto">
                <input type="date" class="border border-gray-300 text-grey-900 w-full p-2 text-sm rounded  leading-4" />
              </div>
              <div class="flex-none">
                <button type="submit" class="bg-green-600 text-white px-5 py-1.5 rounded font-medium">Add</button>
              </div>
            </div>
    </form>
   
     <%- include('todos.ejs',{title:"Overdue",data:overdue}) %>
     <%- include('todos.ejs',{title:"Due Today",data:dueToday}) %>
     <%- include('todos.ejs',{title:"Due Later",data:dueLater}) %>


    <%- include('footer.ejs') %> 
       </div>
    </div>
    
</body>
</html>